(include_subdirs unqualified)

(rule
 (target raw_thir_ast.ml)
 (deps
  (env_var CIRCUS_JSON_SCHEMA_EXPORTER_BINARY)
  (:ocaml_of_json_schema
   ../utils/ocaml_of_json_schema/ocaml_of_json_schema.js))
 (action
  (with-stdout-to
   raw_thir_ast.ml
   (pipe-stdout
    (run %{env:CIRCUS_JSON_SCHEMA_EXPORTER_BINARY=circus-export-json-schemas})
    (run node %{ocaml_of_json_schema} - -)))))

